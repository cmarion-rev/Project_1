@model Data_Layer.Data_Objects.Account

@{
    ViewData["Title"] = "Details";
}


<div>
    @switch ((Data_Layer.Resources.Utility.AccountType)Model.AccountTypeID)
    {
        case Data_Layer.Resources.Utility.AccountType.CHECKING:
        <h3>Checking Account</h3>
            break;
        
        case Data_Layer.Resources.Utility.AccountType.BUSINESS:
        <h3>Business Account</h3>
            break;
        
        case Data_Layer.Resources.Utility.AccountType.TERM_DEPOSIT:
        <h3>CD Account</h3>
            break;
        
        case Data_Layer.Resources.Utility.AccountType.LOAN:
        <h3>Loan Account</h3>
            break;
     
        default:
        <h3>Account</h3>
            break;
    }
    <h5>Details</h5>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AccountType)
        </dt>
        <dd class = "col-sm-10">
           @if (ViewData.ContainsKey("AccountType"))
           {
               @ViewData["AccountType"]
           }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AccountBalance)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AccountBalance)
        </dd>
        @if (Model.AccountTypeID == (int)Data_Layer.Resources.Utility.AccountType.TERM_DEPOSIT)
        {
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaturityDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaturityDate)
        </dd>
        }
        @if (!(Model.AccountTypeID == (int)Data_Layer.Resources.Utility.AccountType.BUSINESS))
        {
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InterestRate)
        </dt>
        <dd class = "col-sm-10">
            @Math.Round(Model.InterestRate * 100.0f, 2) %
        </dd>
        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsOpen)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsOpen)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
